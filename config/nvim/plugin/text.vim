" search
set incsearch
set hlsearch
set ignorecase
set smartcase

" tabs
set tabstop=4 softtabstop=4
set shiftwidth=4 smarttab
set expandtab
filetype indent on
set autoindent
set smartindent

" text wrapping
set wrap
set linebreak

" whitespace characters
set showbreak=↪\ 
set listchars=trail:·
set list

" misc
" move cursor beyond line end in visual block
set virtualedit=block
