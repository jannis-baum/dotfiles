PLUGIN_DIR="$CONFIG_DIR/plugins"

# bar appearance
bar=(
    position=top
    height=32
    blur_radius=30
    color=0xbb000000
    # as close to edge as possible
    padding_left=-9999
    padding_right=-9999
    topmost=on
    show_in_fullscreen=on
    sticky=on
)
sketchybar --bar "${bar[@]}"
sketchybar --load-font "$CONFIG_DIR/media/PoiretOne-With-Lightning.ttf"

# item defaults
default=(
  y_offset=1

  label.padding_left=12
  label.padding_right=12
  label.font="Poiret One:Bold:18"
  label.color=0xffbbbbbb
)
sketchybar --default "${default[@]}"

# right items
sketchybar --add item clock right \
           --set clock update_freq=1 script="$PLUGIN_DIR/clock.zsh" \
           --subscribe clock mouse.entered mouse.exited space_change
sketchybar --add item battery right \
           --set battery update_freq=10 script="$PLUGIN_DIR/battery.zsh" \
           --subscribe battery mouse.entered mouse.exited power_source_change space_change
sketchybar --add item cpu_busy right \
           --set cpu_busy update_freq=10 script="$PLUGIN_DIR/cpu-busy.zsh" \
               label.color=0xfffc897e \
           --subscribe cpu_busy mouse.entered mouse.exited

# update all items
sketchybar --update

# init sketchytabs
$CONFIG_DIR/scripts/init-sketchytabs.zsh
