{
    "panel": {
        "keepCentered": true
    },
    "statusBar": {
        "right": [
            {
                "updateFrequency": 5,
                "main": {
                    "path": "/bin/bash",
                    "args": [
                        "-c",
                        "pmset -g batt | grep 'discharging' &>/dev/null || printf '􀋥 '; (pmset -g batt | grep -o '\\d\\+:\\d\\+' || echo '⋯') | sed 's/0:00/∞/'"
                    ]
                },
                "alt": {
                    "path": "/bin/bash",
                    "args": [
                        "-c",
                        "pmset -g batt | grep 'discharging' &>/dev/null || printf '􀋥 '; pmset -g batt | grep -o '\\d\\+%'"
                    ]
                }
            },
            {
                "updateFrequency": 1,
                "main": {
                    "path": "/bin/date",
                    "args": ["+%l:%M"]
                },
                "alt": {
                    "path": "/bin/date",
                    "args": ["+%m/%d"]
                }
            }
        ]
    },
    "search": {
        "program": {
            "path": "/usr/local/bin/fzf",
            "args": ["-f"]
        }
    },
    "modules": {
        "native": {
            "clipboard": {
                "triggerPrefix": "p"
            }
        },
        "custom": [
            {
                "name": "Character picker",
                "trigger": "^u (.*)",
                "source": "/Users/jannisbaum/.synapse/modules/unicode/source.json",
                "sink": { "path": "/bin/bash", "args": ["-c", "export LANG=en_US.UTF-8; printf '{symbol}' | pbcopy && printf closePanel"] }
            },
            {
                "name": "Control Center",
                "trigger": "^c (.*)",
                "source": "/Users/jannisbaum/.synapse/modules/control-center/source.json",
                "sink": { "path": "/usr/bin/open", "args": ["-g", "hammerspoon://systemKey?key={userInfo}"] }
            },
            {
                "name": "CAS",
                "trigger": "^m (.*)",
                "source": "/Users/jannisbaum/.synapse/modules/cas/source.py",
                "sink": { "path": "/Users/jannisbaum/.synapse/modules/cas/sink.py", "args": ["{title}"] },
                "reloadsOnChange": true,
                "isSearchDisabled": true
            }
        ]
    }
}
