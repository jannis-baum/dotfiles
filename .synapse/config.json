{
    "panel": {
        "keepCentered": true
    },
    "statusInfo": {
        "placeholder": {
            "font": "Poiret One",
            "elements": [
                {
                    "updateFrequency": 5,
                    "main": { "path": "~/.synapse/status/battery.zsh" },
                    "alt": { "path": "~/.synapse/status/battery.zsh", "args": ["--percentage"] }
                },
                {
                    "updateFrequency": 1,
                    "main": { "path": "/bin/date", "args": ["+%l:%M"] },
                    "alt": { "path": "/bin/date", "args": ["+%m/%d"] }
                }
            ]
        }
    },
    "search": {
        "program": { "path": "/usr/local/bin/fzf", "args": ["-f"] }
    },
    "modules": [
        { "clipboard": {
            "trigger": "^p (.*)"
        } },
        { "custom": {
            "name": "Character picker",
            "trigger": "^u (.*)",
            "source": "~/.synapse/modules/unicode/source.json",
            "sink": { "path": "/bin/zsh", "args": ["-c", "export LANG=en_US.UTF-8; printf '{symbol}' | pbcopy && printf closePanel"] }
        } },
        { "custom": {
            "name": "Control Center",
            "trigger": "^c (.*)",
            "source": "~/.synapse/modules/control-center/source.json",
            "sink": {
                "path": "/bin/zsh",
                "args": ["-c", "[[ \"{userInfo}\" == *closePanel* ]] && printf closePanel; open -g 'hammerspoon://controlCenter?info={userInfo}'"]
            }
        } },
        { "custom": {
            "name": "CAS",
            "trigger": "^m (.*)",
            "source": "~/.synapse/modules/cas/source.py",
            "sink": { "path": "~/.synapse/modules/cas/sink.py", "args": ["{title}"] },
            "reloadsOnChange": true,
            "isSearchDisabled": true
        } }
    ]
}
