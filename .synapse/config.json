{
    "panel": {
        "keepCentered": true
    },
    "statusInfo": {
        "bar": {
            "right": [
                {
                    "updateFrequency": 5,
                    "main": {
                        "path": "/bin/zsh",
                        "args": [
                            "-c",
                            "pmset -g batt | grep 'discharging' &>/dev/null || printf '􀋥 '; (pmset -g batt | grep -o '\\d\\+:\\d\\+' || echo '⋯') | sed 's/0:00/∞/'"
                        ]
                    },
                    "alt": {
                        "path": "/bin/zsh",
                        "args": [
                            "-c",
                            "pmset -g batt | grep 'discharging' &>/dev/null || printf '􀋥 '; pmset -g batt | grep -o '\\d\\+%'"
                        ]
                    }
                }
            ]
        },
        "placeholder": {
            "font": "Poiret One",
            "elements": [
                {
                    "updateFrequency": 1,
                    "main": { "path": "/bin/date", "args": ["+%l:%M"] },
                    "alt": { "path": "/bin/date", "args": ["+%m/%d"] }
                }
            ]
        }
    },
    "search": {
        "program": {
            "path": "/usr/local/bin/fzf",
            "args": ["-f"]
        }
    },
    "modules": {
        "native": {
            "clipboard": {
                "triggerPrefix": "p"
            }
        },
        "custom": [
            {
                "name": "Character picker",
                "trigger": "^u (.*)",
                "source": "~/.synapse/modules/unicode/source.json",
                "sink": { "path": "/bin/zsh", "args": ["-c", "export LANG=en_US.UTF-8; printf '{symbol}' | pbcopy && printf closePanel"] }
            },
            {
                "name": "Control Center",
                "trigger": "^c (.*)",
                "source": "~/.synapse/modules/control-center/source.json",
                "sink": { "path": "/usr/bin/open", "args": ["-g", "hammerspoon://systemKey?key={userInfo}"] }
            },
            {
                "name": "CAS",
                "trigger": "^m (.*)",
                "source": "~/.synapse/modules/cas/source.py",
                "sink": { "path": "~/.synapse/modules/cas/sink.py", "args": ["{title}"] },
                "reloadsOnChange": true,
                "isSearchDisabled": true
            }
        ]
    }
}
