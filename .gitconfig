[user]
	name = Jannis Baum
	email = jannis.baum@gmail.com
	signingkey = 8246BB1321CDE045

[core]
	excludesfile = /Users/jannisbaum/.gitignore_global
	editor = 'nvim'
	pager = $HOME/.bin/vim-ansi-pager

[alias]
    tree = log --oneline --reverse

[pull]
	rebase = true

[push]
	autosetupremote = true

[init]
	defaultBranch = main

[diff]
    tool = nvimdiff
[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[difftool]
	prompt = false
    trustExitCode = true

[commit]
	gpgsign = true

[tag]
    forceSignAnnotated = true
